<div class="container mx-auto px-5 mt-10 max-w-lg">
  

  <%= form_with(model: @restaurant, class: "bg-white shadow-md rounded-lg p-6 space-y-6") do |f| %>
    
    <div>
      <%= f.label :registered_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :registered_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :comercial_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :comercial_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :cnpj, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :cnpj, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :address, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit  class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
