<div class="container mx-auto px-5 mt-10 max-w-4xl">
  <div class="bg-white shadow-md rounded-md p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">
      Horário de Funcionamento: <%= I18n.t(@operating_day.week_day) %>
    </h1>

    <div class="text-lg text-gray-700 mb-6">
      <% if @operating_day.open %>
        <p class="mb-2">
          <span class="font-medium text-gray-900">Abre:</span> 
          <%= I18n.l(@operating_day.opening_time, format: :short_time) %>
        </p>  
        <p>
          <span class="font-medium text-gray-900">Fecha:</span> 
          <%= I18n.l(@operating_day.closing_time, format: :short_time) %>
        </p>
      <% else %>
        <p class="font-medium text-red-600">Fechado</p>
      <% end %>
    </div>

    <%= link_to 'Editar Horário', 
      edit_restaurant_operating_day_path(@restaurant, @operating_day), 
      class: "inline-block py-2 px-4 text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-md shadow-sm" %>
  </div>
</div>
