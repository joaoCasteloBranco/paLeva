<div class="container mx-auto px-5 mt-10 max-w-4xl">
  <div class="bg-white shadow-md rounded-md p-6">
    <% if @menu.errors.any? %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
        <% @menu.errors.full_messages.each do |message| %>
          <p class="text-sm"><%= message %></p>
        <% end %>
      </div>
    <% end %>
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Adicionar Novo Card√°pio</h1>

    <%= form_with(model: [@restaurant, @menu], class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Adicionar", class: "w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
