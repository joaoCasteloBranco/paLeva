<h1>Cadastrar porção para o prato: <%= @dish.name %></h1>

<%= form_with(model: [@restaurant, @dish, @serving]) do |f| %>

  <div>
    <%= f.label :description, "Descrição", required: true %>
    <%= f.text_field  :description %>
  </div>

  <div>
    <%= f.label :price, "Preço", required: true %>
    <%= f.number_field  :price %>
  </div>

  <div>
    <%= f.submit "Cadastrar Porção" %>
  </div>

<% end %>