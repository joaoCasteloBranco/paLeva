<h1>Editar Prato: <%= @dish.name %></h1>

<%= form_with(model: [@restaurant, @dish]) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :calories %>
    <%= f.number_field :calories %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit 'Salvar' %>
<% end %>

<%= link_to 'Voltar para o Prato', restaurant_dish_path(@restaurant, @dish) %>
