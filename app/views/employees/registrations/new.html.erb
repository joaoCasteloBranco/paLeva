<div class="container mx-auto px-5 mt-10 max-w-md">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Registro de Funcionário</h2>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <%= render "employees/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, "Nome", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :name, required: true, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :cpf, "CPF", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :cpf, required: true, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "Senha", class: "block text-gray-700 font-medium mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(Mínimo: <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirme sua Senha", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Criar conta", 
              class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-500 focus:ring focus:ring-blue-400 focus:outline-none" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <p>Já possui cadastro?</p>
    <%= render "employees/shared/links" %>
  </div>
</div>
