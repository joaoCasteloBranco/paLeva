<div class="container mx-auto px-5 mt-10 max-w-md">
  <div class="bg-white shadow-md rounded-md p-6">
    <% if @employee.errors.any? %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
        <% @employee.errors.full_messages.each do |message| %>
          <p class="text-sm"><%= message %></p>
        <% end %>
      </div>
    <% end %>
    
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Pré-Cadastro de Funcionário</h1>

    <%= form_with(model: [@restaurant, @employee], class: "space-y-6") do |f| %>

      <div class="flex flex-col">
        <%= f.label :email, "E-mail", class: "text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, required: true, class: "border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :cpf, "CPF", class: "text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :cpf, required: true, class: "border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= f.submit 'Pré-Cadastrar', class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

    <% end %>
  </div>
</div>
