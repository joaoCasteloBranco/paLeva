<div class="container mx-auto px-5 mt-10">

  <h1 class="text-3xl font-bold text-gray-800 mb-6">Cardápios:</h1>

  <% unless user_signed_in? || employee_signed_in? %>

    <div class="bg-white shadow-md rounded-lg p-6 text-center">
      <h2 class="text-xl text-gray-700 mb-4">Entre para registrar pedidos</h2>
      <%= link_to 'Criar Cadastro', new_user_session_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500" %>
    </div>
  <% else %>
    <% if @menus.present? %>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @menus.each do |menu| %>
          <div id="menu_<%= menu.id %>" class="bg-white shadow-md rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= link_to menu.name, restaurant_menu_path(@restaurant, menu), class: "hover:text-blue-600" %>
            </h3>
            <p class="text-gray-600 mb-4">Gerencie os itens deste cardápio:</p>
            <%= link_to 'Adicionar Itens', new_restaurant_menu_menu_content_path(@restaurant, menu), 
              class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-500 text-sm" %>
          </div>
        <% end %>
      </div>


      <div class="mt-10 space-y-4">
        <%= link_to 'Adicionar Cardápio', new_restaurant_menu_path(@restaurant),
          class: "block bg-blue-600 text-white px-2 py-3 rounded-lg text-center hover:bg-blue-500" %>
        <%= link_to 'Criar Novo Pedido', new_restaurant_order_path(@restaurant),
          class: "block bg-indigo-600 text-white px-6 py-3 rounded-lg text-center hover:bg-indigo-500" %>
      </div>
    <% else %>

      <div class="bg-white shadow-md rounded-lg p-6 text-center">
        <h2 class="text-xl text-gray-700 mb-4">Adicione cardápios para criar pedidos</h2>
        <%= link_to 'Adicionar Cardápio', new_restaurant_menu_path(@restaurant), 
          class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500" %>
      </div>
    <% end %>
  <% end %>
</div>
