<div class="container mx-auto px-5 mt-10 max-w-3xl">
  <% if @order.status_historics.present? %>

    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Status do Pedido</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Informações do Pedido</h2>
      <div class="space-y-3 text-gray-600">
        <p><strong>Nome do Cliente:</strong> <%= @order.customer_name %></p>
        <p><strong>Status:</strong> <%= t(@order.status) %></p>
        <p><strong>Total:</strong> R$ <%= @order.total_price %></p>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Informações do Restaurante</h2>
      <div class="space-y-3 text-gray-600">
        <p><strong>Nome:</strong> <%= @restaurant.comercial_name %></p>
        <p><strong>Endereço:</strong> <%= @restaurant.address %></p>
        <p><strong>Contato:</strong> <%= @restaurant.phone %> | <%= @restaurant.email %></p>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Detalhes do Pedido:</h2>
      <div class="space-y-4">
        <% @order.status_historics.each do |historic| %>
          <div class="border-b pb-4">
            <p class="text-gray-600"><strong>Status:</strong> <%= I18n.t(historic.status) %></p>
            <p class="text-gray-500"><strong>Alterado em:</strong> <%= I18n.localize(historic.changed_at, format: :long) %></p>
            <% if historic.notes.present? %> 
              <p class="text-gray-500 mt-2"><strong>Notas:</strong> <%= historic.notes %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <p class="text-center text-gray-600">Pedido ainda está sendo cadastrado no sistema.</p>
  <% end %>
</div>
