<div class="container mx-auto px-5 mt-10 max-w-3xl">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Criar Novo Pedido</h1>

  <%= form_with(model: [@restaurant, @order], class: "bg-white shadow-md rounded-md p-6 space-y-4") do |f| %>

    <div class="flex flex-col">
      <%= f.label :customer_name, "Nome do Cliente", class: "text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :customer_name, class: "border border-gray-300 rounded-md p-2 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :cpf, "CPF", class: "text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :cpf, class: "border border-gray-300 rounded-md p-2 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :contact_phone, "Telefone", class: "text-gray-700 font-semibold mb-1" %>
      <%= f.telephone_field :contact_phone, required: true, class: "border border-gray-300 rounded-md p-2 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :contact_email, "E-mail", class: "text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :contact_email, class: "border border-gray-300 rounded-md p-2 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Criar Novo Pedido", class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-md shadow hover:bg-blue-600 transition-colors" %>
    </div>
  <% end %>
</div>
