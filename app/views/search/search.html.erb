<div class="container mx-auto px-5 mt-10">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Resultados da Busca</h2>

  <% if @dishes.any? || @beverages.any? %>
    <% if @dishes.any? %>
      <div class="mb-10">
        <h3 class="text-xl font-semibold text-blue-600 mb-4">Pratos</h3>
        <ul class="space-y-4">
          <% @dishes.each do |dish| %>
            <li class="flex items-center justify-between bg-white shadow-md rounded-md p-4 hover:shadow-lg transition-shadow">
              <div class="text-gray-800 font-medium">
                <%= link_to dish.name, restaurant_dish_path(@restaurant, dish), class: "text-blue-500 hover:underline" %>
              </div>
              <div>
                <%= link_to 'Editar', edit_restaurant_dish_path(@restaurant, dish), 
                  class: "text-sm text-white bg-blue-600 py-1 px-3 rounded-md hover:bg-blue-500 transition-colors" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if @beverages.any? %>
      <div>
        <h3 class="text-xl font-semibold text-blue-600 mb-4">Bebidas</h3>
        <ul class="space-y-4">
          <% @beverages.each do |beverage| %>
            <li class="flex items-center justify-between bg-white shadow-md rounded-md p-4 hover:shadow-lg transition-shadow">
              <div class="text-gray-800 font-medium">
                <%= link_to beverage.name, restaurant_beverage_path(@restaurant, beverage), class: "text-blue-500 hover:underline" %>
              </div>
              <div>
                <%= link_to 'Editar', edit_restaurant_beverage_path(@restaurant, beverage), 
                  class: "text-sm text-white bg-blue-600 py-1 px-3 rounded-md hover:bg-blue-500 transition-colors" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">Nenhum resultado encontrado.</p>
  <% end %>
</div>
